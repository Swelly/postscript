<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to '<PostScript/>', root_path, class: 'navbar-brand' %>
    </div>

    <div class="navbar-collapse collapse">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <%= link_to(edit_user_registration_path) do %>
            <icon class='icon-tools'></icon>
          <% end %>

          <%= link_to(destroy_user_session_path, method: 'delete') do %>
            <icon class='icon-logout'></icon>
          <% end %>
        </ul>
      <% else %>
        <form class="navbar-form navbar-right">
          <%= button_to(user_omniauth_authorize_path(:github), class: 'btn btn-info') do %>
            Sign in with <icon class='icon-github' style='margin: 0'></icon>
          <% end %>
        </form>
      <% end %>
    </div><!--/.nav-collapse -->
  </div>
</div>


